<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="800.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.michaelmckibbin.js1.SearchController">


    <SplitPane dividerPositions="0.25" focusTraversable="true" VBox.vgrow="ALWAYS">
        <AnchorPane>
            <VBox alignment="TOP_CENTER" layoutX="30.0" layoutY="38.0" prefHeight="96.0" prefWidth="100.0"
                  spacing="10" styleClass="navigation-button-container-1" AnchorPane.topAnchor="20.0">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <Button fx:id="StorefrontButton" layoutX="10.0" layoutY="2.0" mnemonicParsing="false"
                        onAction="#handleStorefrontButtonClick" styleClass="storefront-button"
                        text="Storefront"/>
                <Button fx:id="displayCasesButton" layoutX="10.0" layoutY="12.0" mnemonicParsing="false"
                        onAction="#handleDisplayCasesButtonClick" styleClass="storefront-button"
                        text="Display Cases"/>

            </VBox>
            <VBox alignment="CENTER" layoutX="30.0" layoutY="363.0" prefHeight="124.0" prefWidth="150.0"
                  spacing="5.0"
                  style="-fx-border-color: black; -fx-border-width: 3; -fx-border-radius: 5; -fx-background-color: lightblue;"
                  AnchorPane.bottomAnchor="111.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="42.0"
                  AnchorPane.topAnchor="363.0">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Search for something"
                       textAlignment="CENTER">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="searchField" prefHeight="25.0" prefWidth="95.0"
                           promptText="Enter search term">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                </TextField>
                <Label prefHeight="33.0" prefWidth="122.0" text="e.g. ring, gold , .925, ">
                    <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets left="2.0" right="2.0" top="2.0"/>
                    </padding>
                </Label>
                <Label layoutX="24.0" layoutY="202.0" prefHeight="89.0" prefWidth="124.0"
                       text="You can search by     ID#, Name, Description, Price, Location, or Quality."
                       textAlignment="CENTER" wrapText="true">
                    <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets bottom="2.0" left="3.0" right="3.0" top="3.0"/>
                    </VBox.margin>
                </Label>
                <Label layoutX="24.0" layoutY="141.0" prefHeight="66.0" prefWidth="122.0"
                       style="-fx-border-color: red; -fx-border-radius: 5;"
                       text="Tip: To see all items just type a single decimal point  . "
                       textAlignment="CENTER" wrapText="true">
                    <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </padding>
                    <font>
                        <Font name="System Italic" size="12.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                    </VBox.margin>
                </Label>
            </VBox>
            <Separator layoutX="11.0" layoutY="318.0" prefWidth="200.0"/>

        </AnchorPane>
        <VBox>
            <ScrollPane prefHeight="500.0" prefWidth="500.0">

                <VBox fx:id="searchResultsVBox" prefHeight="400.0" prefWidth="500.0">
                    <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </VBox.margin>
                </VBox>

            </ScrollPane>

            <ScrollPane prefHeight="300.0" prefWidth="500">

                <HBox>
                    <VBox fx:id="displayChosenItemVBox" prefHeight="300.0" prefWidth="400.0">
                        <VBox.margin>
                            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                        </VBox.margin>
                    </VBox>
                    <VBox fx:id="chosenItemImageVBox">
                        <VBox.margin>
                            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                        </VBox.margin>

                    </VBox>
                </HBox>
            </ScrollPane>
        </VBox>
    </SplitPane>

</VBox>
