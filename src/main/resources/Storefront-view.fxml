<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.*?>
<VBox fx:id="mainStage" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.michaelmckibbin.js1.JewelleryStoreController">


    <!--menubar-->
    <HBox>
        <MenuBar HBox.hgrow="ALWAYS">
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" onAction="#loadFile" text="Load Data File"/>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem mnemonicParsing="false" onAction="#saveFile" text="Save Data File"/>
                <MenuItem mnemonicParsing="false" onAction="#saveAndExit" text="Save and Exit"/>
                <MenuItem mnemonicParsing="false" onAction="#makeBackup" text="Make backup of data file"/>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem mnemonicParsing="false" onAction="#closeProg" text="Close program"/>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem mnemonicParsing="false" onAction="#onLoadSampleData" text="Load sample data"/>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem mnemonicParsing="false" onAction="#deleteAllStock" text="Delete Stock List * CAUTION *"/>
            </Menu>

        </MenuBar>
        <MenuBar>
            <Menu mnemonicParsing="false" text="About">
                <MenuItem mnemonicParsing="false" onAction="#viewAbout" text="About App"/>
                <MenuItem mnemonicParsing="false" onAction="#viewReadme" text="view Readme"/>
            </Menu>
        </MenuBar>
    </HBox>
    <!--            end of menubar-->

    <SplitPane dividerPositions="0.25, 0.73" focusTraversable="true"
               VBox.vgrow="ALWAYS">
        <AnchorPane>
            <!--                            navigation buttons & container-->
            <VBox alignment="TOP_CENTER" layoutX="28.0" prefHeight="235.0" prefWidth="133.0" spacing="8.0"
                  styleClass="navigation-button-container-1" AnchorPane.topAnchor="10.0">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="10.0"/>
                </padding>

                <Button fx:id="displayCasesButton" mnemonicParsing="false"
                        onAction="#handleDisplayCasesButtonClick" prefHeight="25.0" prefWidth="100.0"
                        styleClass="storefront-button" text="Display Cases">
                    <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="jewelleryItemsButton" mnemonicParsing="false"
                        onAction="#handleJewelleryItemsButtonClick" prefHeight="25.0" prefWidth="100.0"
                        styleClass="storefront-button" text="Jewellery Items">
                    <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="stockValuesButton" mnemonicParsing="false"
                        onAction="#handleStockValuesButtonClick" prefHeight="25.0" prefWidth="100.0"
                        styleClass="storefront-button" text="Stock Value Lists">
                    <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="DrilldownButton" mnemonicParsing="false"
                        onAction="#handleDrilldownButtonClick" prefHeight="25.0" prefWidth="100.0"
                        styleClass="storefront-button" text="Drilldown">
                    <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="AltBrowseButton" mnemonicParsing="false"
                        onAction="#handleAltBrowseButtonClick" prefHeight="25.0" prefWidth="100.0"
                        styleClass="storefront-button" text="Alternate Browse">
                    <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="SearchPageButton" mnemonicParsing="false"
                        onAction="#handleSearchPageButtonClick" prefHeight="25.0" prefWidth="100.0"
                        styleClass="storefront-button" text="Search Page">
                    <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </VBox.margin>
                </Button>
                <Button fx:id="displayTraysButton" mnemonicParsing="false"
                        onAction="#handleDisplayTraysButtonClick" prefHeight="25.0" prefWidth="100.0"
                        styleClass="storefront-button" text="Display Trays" visible="false"/>
                <Button fx:id="jewelleryMaterialsButton" mnemonicParsing="false"
                        onAction="#handleJewelleryMaterialsButtonClick" prefHeight="25.0"
                        prefWidth="100.0" styleClass="storefront-button" text="Jewellery Materials"
                        visible="false"/>
            </VBox>
            <!--                            end of navigation buttons & container-->

        </AnchorPane>
        <ScrollPane>
            <AnchorPane id="Content" prefHeight="545.0" prefWidth="430.0">
                <Pane layoutX="116.0" layoutY="14.0" prefHeight="288.0" prefWidth="205.0">
                    <Button fx:id="mikeyFaceButton" contentDisplay="TOP" mnemonicParsing="false"
                            onAction="#handleMikeyFaceButtonClick" prefHeight="270.0"
                            prefWidth="202.0" text="?" textAlignment="CENTER">
                        <graphic>
                            <ImageView fx:id="mikeyFaceImageView" fitHeight="244.0" fitWidth="144.0"
                                       preserveRatio="true">
                                <Image url="@images/jwlface1xs.jpg"/>
                            </ImageView>

                        </graphic>
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </Button>
                </Pane>
                <VBox layoutX="119.0" layoutY="332.0" prefHeight="142.0" prefWidth="199.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="9.0"
                           prefWidth="292.0" style="&#10;" text="Current Stock Values"
                           textAlignment="CENTER" textFill="#4c6af2">
                        <padding>
                            <Insets bottom="5.0"/>
                        </padding>
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </Label>
                    <Label alignment="CENTER" prefHeight="21.0" prefWidth="189.0"
                           text="Total value of jewellery in stock:" textAlignment="CENTER"
                           wrapText="true">
                        <opaqueInsets>
                            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                        </opaqueInsets>
                        <VBox.margin>
                            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                        </VBox.margin>
                        <padding>
                            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                        </padding>
                    </Label>
                    <Label fx:id="displayJewelleryTotal" alignment="CENTER" contentDisplay="CENTER"
                           prefHeight="24.0" prefWidth="178.0" text="€ 0.00" textAlignment="CENTER">
                        <padding>
                            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                        </padding>
                        <font>
                            <Font name="Calibri Bold" size="18.0"/>
                        </font>
                    </Label>
                    <Label alignment="CENTER" prefHeight="17.0" prefWidth="178.0"
                           text="Including materials value of:" textAlignment="CENTER">
                        <padding>
                            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                        </padding>
                    </Label>
                    <Label fx:id="displayMaterialsTotal" alignment="CENTER" prefHeight="22.0"
                           prefWidth="181.0" text="€ 0.00" textAlignment="CENTER">
                        <font>
                            <Font name="Calibri Bold" size="18.0"/>
                        </font>
                    </Label>
                    <Button contentDisplay="CENTER" mnemonicParsing="false"
                            onAction="#onTotalValueOfStock" prefHeight="27.0" prefWidth="185.0"
                            text="Click to refresh" textAlignment="CENTER">
                        <padding>
                            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                        </padding>
                    </Button>
                </VBox>
            </AnchorPane>
        </ScrollPane>
        <AnchorPane>
            <VBox fx:id="storefrontHighlightVBox" layoutX="6.0" layoutY="7.0" prefHeight="543.0"
                  prefWidth="259.0"/>
        </AnchorPane>

    </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
        </padding>
        <Label maxHeight="1.7976931348623157E308" text="Left status" visible="false"
               HBox.hgrow="ALWAYS">
            <font>
                <Font size="11.0"/>
            </font>
            <textFill>
                <Color red="0.625" green="0.625" blue="0.625"/>
            </textFill>
        </Label>
        <Pane HBox.hgrow="ALWAYS"/>
        <Label text="Right status" visible="false"
               HBox.hgrow="NEVER"/>
    </HBox>
</VBox>
