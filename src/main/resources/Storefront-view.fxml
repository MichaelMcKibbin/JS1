<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.*?>
<VBox fx:id="mainStage" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.michaelmckibbin.js1.JewelleryStoreController">


    <children>
        <!--menubar-->
        <HBox>
            <MenuBar HBox.hgrow="ALWAYS">
                <Menu mnemonicParsing="false" text="File">
                    <MenuItem mnemonicParsing="false" onAction="#loadFile" text="Load Data File"/>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" onAction="#saveFile" text="Save Data File"/>
                    <MenuItem mnemonicParsing="false" onAction="#saveAndExit" text="Save and Exit"/>
                    <MenuItem mnemonicParsing="false" onAction="#makeBackup" text="Make backup of data file"/>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" onAction="#closeProg" text="Close program"/>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" onAction="#onLoadSampleData" text="Load sample data"/>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" onAction="#deleteAllStock" text="Delete Stock List * CAUTION *"/>
                </Menu>

            </MenuBar>
            <MenuBar>
                <menus>
                    <Menu mnemonicParsing="false" text="Help">
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#viewAbout" text="About App"/>
                            <MenuItem mnemonicParsing="false" onAction="#viewReadme" text="view Readme"/>
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
        </HBox>
        <!--            end of menubar-->

        <SplitPane dividerPositions="0.2505567928730512, 0.7305122494432071" focusTraversable="true" prefHeight="-1.0"
                   prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <items>
                <AnchorPane>
                    <children>
                        <!--                            navigation buttons & container-->
                        <VBox layoutX="28.0" layoutY="41.0" prefHeight="235.0" prefWidth="133.0" spacing="10"
                              styleClass="navigation-button-container-1">
                            <children>

                                <Button fx:id="displayCasesButton" layoutX="10.0" layoutY="12.0" mnemonicParsing="false"
                                        onAction="#handleDisplayCasesButtonClick" prefHeight="25.0" prefWidth="100.0"
                                        styleClass="storefront-button" text="Display Cases"/>
                                <Button fx:id="displayTraysButton" layoutX="10.0" layoutY="30.0" mnemonicParsing="false"
                                        onAction="#handleDisplayTraysButtonClick" prefHeight="25.0" prefWidth="100.0"
                                        styleClass="storefront-button" text="Display Trays" visible="false"/>
                                <Button fx:id="jewelleryItemsButton" layoutX="10.0" layoutY="62.0"
                                        mnemonicParsing="false" onAction="#handleJewelleryItemsButtonClick"
                                        prefHeight="25.0" prefWidth="100.0" styleClass="storefront-button"
                                        text="Jewellery Items"/>
                                <Button fx:id="jewelleryMaterialsButton" layoutX="10.0" layoutY="80.0"
                                        mnemonicParsing="false" onAction="#handleJewelleryMaterialsButtonClick"
                                        prefHeight="25.0" prefWidth="100.0" styleClass="storefront-button"
                                        text="Jewellery Materials" visible="false"/>
                                <Button fx:id="stockValuesButton" layoutX="10.0" layoutY="113.0" mnemonicParsing="false"
                                        onAction="#handleStockValuesButtonClick" prefHeight="25.0" prefWidth="100.0"
                                        styleClass="storefront-button" text="Stock Value Lists"/>
                                <Button fx:id="DrilldownButton" layoutX="10.0" layoutY="138.0" mnemonicParsing="false"
                                        onAction="#handleDrilldownButtonClick" prefHeight="25.0" prefWidth="100.0"
                                        styleClass="storefront-button" text="Drilldown"/>
                                <Button fx:id="AltBrowseButton" layoutX="10.0" layoutY="168.0" mnemonicParsing="false"
                                        onAction="#handleAltBrowseButtonClick" prefHeight="25.0" prefWidth="100.0"
                                        styleClass="storefront-button" text="Alternate Browse"/>
                                <Button fx:id="SearchPageButton" layoutX="10.0" layoutY="198.0" mnemonicParsing="false"
                                        onAction="#handleSearchPageButtonClick" prefHeight="25.0" prefWidth="100.0"
                                        styleClass="storefront-button" text="Search Page"/>


                            </children>
                        </VBox>
                        <!--                            end of navigation buttons & container-->

                    </children>
                </AnchorPane>
                <ScrollPane prefHeight="-1.0" prefWidth="-1.0">
                    <content>
                        <AnchorPane id="Content" minHeight="-1.0" minWidth="-1.0" prefHeight="545.0" prefWidth="430.0">
                            <children>
                                <Pane layoutX="115.0" layoutY="41.0" prefHeight="310.0" prefWidth="205.0">
                                    <children>
                                        <Button fx:id="mikeyFaceButton" contentDisplay="TOP" mnemonicParsing="false"
                                                onAction="#handleMikeyFaceButtonClick" prefHeight="310.0"
                                                prefWidth="202.0" text="?" textAlignment="CENTER">
                                            <graphic>
                                                <ImageView fx:id="mikeyFaceImageView" fitHeight="256.0" fitWidth="150"
                                                           preserveRatio="true">
                                                    <Image url="@images/jwlface1xs.jpg"/>
                                                </ImageView>

                                            </graphic>
                                            <font>
                                                <Font size="18.0"/>
                                            </font>
                                        </Button>
                                    </children>
                                </Pane>
                                <VBox layoutX="118.0" layoutY="386.0" prefHeight="142.0" prefWidth="199.0">
                                    <children>
                                        <Label alignment="CENTER" prefHeight="21.0" prefWidth="189.0"
                                               text="Total value of jewellery in stock:" textAlignment="CENTER"
                                               wrapText="true">
                                            <opaqueInsets>
                                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                                            </opaqueInsets>
                                            <VBox.margin>
                                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                                            </VBox.margin>
                                            <padding>
                                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                                            </padding>
                                        </Label>
                                        <Label fx:id="displayJewelleryTotal" alignment="CENTER" contentDisplay="CENTER"
                                               prefHeight="24.0" prefWidth="178.0" text="€ 0.00" textAlignment="CENTER">
                                            <padding>
                                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                                            </padding>
                                            <font>
                                                <Font name="Calibri Bold" size="18.0"/>
                                            </font>
                                        </Label>
                                        <Label alignment="CENTER" prefHeight="17.0" prefWidth="178.0"
                                               text="Including materials value of:" textAlignment="CENTER">
                                            <padding>
                                                <Insets bottom="2.0" left="2.0" right="2.0" top="5.0"/>
                                            </padding>
                                        </Label>
                                        <Label fx:id="displayMaterialsTotal" alignment="CENTER" prefHeight="22.0"
                                               prefWidth="181.0" text="€ 0.00" textAlignment="CENTER">
                                            <font>
                                                <Font name="Calibri Bold" size="18.0"/>
                                            </font>
                                        </Label>
                                        <Button contentDisplay="CENTER" mnemonicParsing="false"
                                                onAction="#onTotalValueOfStock" prefHeight="27.0" prefWidth="185.0"
                                                text="Click to refresh" textAlignment="CENTER">
                                            <padding>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                            </padding>
                                        </Button>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </VBox>
                                <Label alignment="CENTER" contentDisplay="CENTER" layoutX="72.0" layoutY="368.0"
                                       prefHeight="9.0" prefWidth="292.0" style="&#10;" text="Current Stock Values"
                                       textAlignment="CENTER" wrapText="false">
                                    <padding>
                                        <Insets bottom="10.0"/>
                                    </padding>
                                    <rotationAxis>
                                        <Point3D/>
                                    </rotationAxis>
                                    <font>
                                        <Font size="18.0" fx:id="x1"/>
                                    </font>
                                    <textFill>
                                        <Color red="0.624" green="0.624" blue="0.624" fx:id="x2"/>
                                    </textFill>
                                </Label>
                            </children>
                        </AnchorPane>
                    </content>
                </ScrollPane>
                <AnchorPane>
                    <children>
                        <VBox fx:id="storefrontHighlightVBox" layoutX="6.0" layoutY="7.0" prefHeight="543.0"
                              prefWidth="259.0"/>
                    </children>
                </AnchorPane>

            </items>
        </SplitPane>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
            <children>
                <Label maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Left status" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="11.0" fx:id="x3"/>
                    </font>
                    <textFill>
                        <Color red="0.625" green="0.625" blue="0.625" fx:id="x4"/>
                    </textFill>
                </Label>
                <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS"/>
                <Label font="$x3" maxWidth="-1.0" text="Right status" textFill="$x4" HBox.hgrow="NEVER"/>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
