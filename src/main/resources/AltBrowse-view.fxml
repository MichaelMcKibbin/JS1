<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.michaelmckibbin.js1.AltBrowseController">


    <children>
        <!--menubar-->
        <HBox>
            <MenuBar HBox.hgrow="ALWAYS">
                <menus>
                    <Menu mnemonicParsing="false" text="File">
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#loadFile" text="Load Data File"/>
                            <SeparatorMenuItem mnemonicParsing="false"/>
                            <MenuItem mnemonicParsing="false" onAction="#saveFile" text="Save Data File"/>
                            <MenuItem mnemonicParsing="false" onAction="#saveAndExit" text="Save and Exit"/>
                            <SeparatorMenuItem mnemonicParsing="false"/>
                            <MenuItem mnemonicParsing="false" onAction="#closeProg" text="Exit"/>
                            <SeparatorMenuItem mnemonicParsing="false"/>
                            <MenuItem mnemonicParsing="false" onAction="#deleteAllStock"
                                      text="Delete Stock List * CAUTION *"/>
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Stock List">
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#viewAllStock" text="List All Stock"/>

                        </items>
                    </Menu>
                </menus>
            </MenuBar>
            <MenuBar>
                <menus>
                    <Menu mnemonicParsing="false" text="Help">
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#viewAbout" text="About App"/>
                            <MenuItem mnemonicParsing="false" onAction="#viewReadme" text="view Readme"/>
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
        </HBox>
        <!--            end of menubar-->

        <SplitPane dividerPositions="0.20044543429844097" focusTraversable="true" prefHeight="528.0" prefWidth="900.0"
                   VBox.vgrow="ALWAYS">
            <items>
                <AnchorPane>
                    <StackPane>
                        <children>
                            <VBox alignment="CENTER" spacing="20">
                                <children>
                                    <Label alignment="CENTER" minWidth="60.0" prefWidth="-1.0" text="Navigation"
                                           textAlignment="CENTER" wrapText="false">
                                        <font>
                                            <Font size="18.0" fx:id="x1"/>
                                        </font>
                                        <textFill>
                                            <Color red="0.624" green="0.624" blue="0.624" fx:id="x2"/>
                                        </textFill>
                                    </Label>
                                    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10"
                                          styleClass="navigation-button-container-1">
                                        <children>
                                            <Button fx:id="StorefrontButton" mnemonicParsing="false"
                                                    onAction="#handleStorefrontButtonClick"
                                                    styleClass="storefront-button" text="Storefront"/>
                                            <Button fx:id="displayCasesButton" mnemonicParsing="false"
                                                    onAction="#handleDisplayCasesButtonClick"
                                                    styleClass="storefront-button" text="Display Cases"/>
                                            <Button fx:id="jewelleryItemsButton" mnemonicParsing="false"
                                                    onAction="#handleJewelleryItemsButtonClick"
                                                    styleClass="storefront-button" text="Jewellery Items"/>

                                        </children>
                                    </VBox>
                                </children>
                                <StackPane.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                </StackPane.margin>
                            </VBox>
                        </children>
                    </StackPane>
                </AnchorPane>

                <ScrollPane prefHeight="550.0" prefWidth="571.0">
                    <content>

                        <AnchorPane id="Content" minHeight="-1.0" minWidth="-1.0" prefHeight="500.0" prefWidth="400.0">
                            <children>
                                <Label alignment="CENTER" font="$x1" layoutX="14.0" layoutY="14.0" style="&#10;"
                                       text="View" textAlignment="CENTER" wrapText="false"/>
                                <ScrollPane>
                                    <VBox fx:id="jewelleryItemsVBox" layoutX="100.0" layoutY="100" prefHeight="513.0"
                                          prefWidth="595.0">
                                    </VBox>
                                </ScrollPane>
                            </children>
                        </AnchorPane>

                    </content>
                </ScrollPane>


            </items>
        </SplitPane>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
            <children>
                <Label maxHeight="1.8" maxWidth="-1.0" text="Left status" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="11.0" fx:id="x3"/>
                    </font>
                    <textFill>
                        <Color red="0.625" green="0.625" blue="0.625" fx:id="x4"/>
                    </textFill>
                </Label>
                <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS"/>
                <Label font="$x3" maxWidth="-1.0" text="Right status" textFill="$x4" HBox.hgrow="NEVER"/>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
